{
  "regions": ["cdg1"],
  "functions": {
    "api/**/*": {
      "includeFiles": "{server/**,dist/**}",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index?path=$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
